@model PeopleViewModel

<div class="row">
    <div class="col-md-12">
        <a href="/home/addview" class="btn btn-success">Add People</a>
        <table class="table table-hover table-bordered">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
            </tr>
            @foreach (var p in Model.People)
            {
                <tr>
                    <td>@p.FirstName</td>
                    <td>@p.LastName</td>
                    <td>@p.Age</td>
                </tr>
            }
        </table>
    </div>
</div>
